# Looker MCP Server Configuration
# Copy this file to .env and fill in your actual values

# Looker Instance Base URL (without trailing slash or /api)
# Example: https://your-company.looker.com or https://your-company.cloud.looker.com
LOOKER_BASE_URL=https://your-looker-instance.com:19999

# Looker API Credentials
# Get these from your Looker Admin -> Users -> Edit API Keys
LOOKER_CLIENT_ID=your_client_id_here
LOOKER_CLIENT_SECRET=your_client_secret_here

# SSL Verification (set to false only for self-signed certificates in dev)
LOOKER_VERIFY_SSL=true

# Looker API Version
LOOKER_API_VERSION=4.0

# Server Configuration
PORT=8080
HOST=0.0.0.0
